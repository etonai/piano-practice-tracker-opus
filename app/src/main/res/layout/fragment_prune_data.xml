<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Prune Data"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pruning removes old activity records while preserving all pieces, statistics, and favorites."
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <LinearLayout
        android:id="@+id/activityCountsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionText">
        
        <TextView
            android:id="@+id/activitiesStoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities Stored: 0"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center" />
        
        <TextView
            android:id="@+id/maximumActivitiesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Activities: 0"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginTop="4dp" />
        
        <TextView
            android:id="@+id/lifetimeActivitiesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lifetime Activities: 0"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginTop="4dp" />
            
    </LinearLayout>

    <Button
        android:id="@+id/exportDataFirstButton"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Export Options"
        android:contentDescription="Navigate to data export options"
        android:backgroundTint="?attr/colorSecondary"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityCountsContainer" />

    <Button
        android:id="@+id/pruneOldestActivitiesButton"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Prune Oldest 100 Activities"
        android:contentDescription="Delete the oldest 100 activities without affecting piece statistics"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportDataFirstButton" />

    <TextView
        android:id="@+id/safetyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✓ Pieces are preserved\n✓ Statistics are preserved\n✓ Favorites are preserved\n✓ Only activity records are affected"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pruneOldestActivitiesButton" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>